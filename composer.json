{
    "name": "previousnext/coding-standard",
    "type": "phpcodesniffer-standard",
    "homepage": "https://github.com/previousnext/coding-standard",
    "keywords": ["drupal", "phpcs"],
    "require": {
        "php": "^8.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "drupal/coder": "^8.3.26",
        "slevomat/coding-standard": "^8.15.0",
        "squizlabs/php_codesniffer": "^3.11.1"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^1.12.12",
        "phpstan/phpstan-deprecation-rules": "^1.2.1",
        "phpstan/phpstan-strict-rules": "^1.6.1",
        "phpunit/phpunit": "^11.5"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PreviousNext\\CodingStandard\\": "PreviousNextCodingStandard/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PreviousNext\\CodingStandard\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
